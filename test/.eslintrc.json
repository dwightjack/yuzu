{
    "env": {
        "browser": true,
        "es6": true,
				"mocha": true
		},

		"root": true,

		"extends": "airbnb-base",

		"parser": "babel-eslint",

    "rules": {
        "indent": [2, 4],
        "no-multiple-empty-lines": [2, { "max": 3 }],
        "spaced-comment": 0,
        "comma-dangle": [2, "never"],
        "eol-last": [1, "never"],
        "padded-blocks": [1, { "classes": "always" }],
        "max-len": 0,
        "arrow-parens": 0,
        "global-require": 0,
        "no-commonjs": 0,
        "arrow-body-style": 0,
				"prefer-template": 0,
				"camelcase": 0,
				"no-underscore-dangle": 0,
				"func-names": 0,

        "import/no-dynamic-require": 0,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    }
}
