{
    "env": {
        "browser": false,
				"node": true,
        "es6": true
    },
    "extends": "airbnb-base",

    "rules": {
        "indent": [2, 4],
        "no-multiple-empty-lines": [2, { "max": 3 }],
        "spaced-comment": 0,
        "comma-dangle": [2, "never"],
        "eol-last": [1, "never"],
        "padded-blocks": [1, { "classes": "always" }],
        "max-len": 0,
        "no-underscore-dangle": 0,
        "arrow-parens": 0,
				"import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    }
}
